{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": true,
  "permission": {
    "bash": {
      "*install*": "deny",
      "*uninstall*": "deny",
      "*rm*": "deny",
      "*rmdir*": "deny",
      "*del*": "deny",
      "*": "allow"
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true
    }
  }
}
