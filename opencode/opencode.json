{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "keybinds": {
    "messages_page_up": "alt+u",
    "messages_page_down": "alt+d",
    "messages_half_page_up": "ctrl+alt+u",
    "messages_half_page_down": "ctrl+alt+d"
  },
  "autoupdate": true,
  "permission": {
    "bash": {
      "*": "allow",
      "*install*": "deny",
      "*uninstall*": "deny",
      "*rm*": "deny",
      "*rmdir*": "deny",
      "*del*": "deny",
      "*build*": "ask",
      "*nx*": "deny",
      "npx eslint*": "allow",
      "npx tsc*": "allow",
      "rg": "allow",
      "Grep": "allow",
      "fd": "allow",
      "ripgrep": "allow",
      "grep": "allow",
      "find": "allow",
      "curl*": "allow",
      "wget*": "allow",
      "cat*": "allow",
      "git add*": "deny",
      "git commit*": "deny",
      "git push*": "deny",
      "git pull*": "deny",
      "git merge*": "deny",
      "git rebase*": "deny",
      "git reset*": "deny",
      "git checkout*": "deny",
      "git switch*": "deny",
      "git cherry-pick*": "deny",
      "git revert*": "deny",
      "git clean*": "deny",
      "git stash*": "deny",
      "git log*": "allow",
      "git show*": "allow",
      "git diff*": "allow",
      "git status*": "allow",
      "git tag*": "allow",
      "git cat-file*": "allow",
      "git ls-tree*": "allow",
      "git ls-files*": "allow",
      "git blame*": "allow",
      "git whatchanged*": "allow",
      "git rev-list*": "allow",
      "git shortlog*": "allow",
      "git rev-parse*": "allow",
      "git describe*": "allow",
      "git name-rev*": "allow"
    }
  },

  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest",
        "--headless=true",
        "--isolated=true"
      ],
      "enabled": true
    }
  }
}
